<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="#FFFFFF">

    <Button
        ohos:id="$+id:switch_slice_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:switch_slice"
        ohos:text_size="15fp"
        ohos:text_color="#FFFFFF"
        ohos:top_margin="30vp"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:right_padding="10vp"
        ohos:left_padding="10vp"
        ohos:background_element="$graphic:background_button"
        ohos:align_parent_top="true"
        ohos:center_in_parent="true"
        ohos:bottom_margin="40vp"/>
    <Button
        ohos:id="$+id:switch_localFA_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:switch_local_fa"
        ohos:text_size="15fp"
        ohos:text_color="#FFFFFF"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:right_padding="10vp"
        ohos:left_padding="10vp"
        ohos:background_element="$graphic:background_button"
        ohos:center_in_parent="true"
        ohos:bottom_margin="40vp"/>
    <Button
        ohos:id="$+id:switch_remoteFA_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:switch_remote_fa"
        ohos:text_size="15fp"
        ohos:text_color="#FFFFFF"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:right_padding="10vp"
        ohos:left_padding="10vp"
        ohos:background_element="$graphic:background_button"
        ohos:align_parent_bottom="true"
        ohos:center_in_parent="true"
        ohos:bottom_margin="40vp"/>
</DependentLayout>